@page
@model Individual_Project___Eren_Destan.Pages.CreateAccountModel
@{
    ViewBag.Title = "Create Account!";
    Layout = "_Layout";  
}
@*@section scripts{
    <partial name="_ValidationScriptsPartial" />
}*@

<title>Create an Account!</title>
<link rel="stylesheet" href="css/createAccountStyling.css" />

<div class="container">
    <h1>Create Your Account</h1>
    <div class="form_container">
        <form method="post">
            <div class="row mt-2">
                <div class="name col-1">
                    @*<label asp-for="@Model.Member.Name">Name*</label>*@
                    <label asp-for="Member.Name">Name*</label>
                    <span asp-validation-for="Member.Name"></span>
                </div>
                <div class="col-11">
                    
                    <input asp-for="Member.Name" placeholder="Your name...">
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-1">
                    <label asp-for="Member.Email">Email*</label>
                    <span asp-validation-for="Member.Email"></span>
                </div>
                <div class="col-11">
                    <input asp-for="Member.Email" placeholder="Your email...">
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-1">
                    <label asp-for="Member.Password">Password*</label>
                    <span asp-validation-for="Member.Password"></span>
                </div>
                <div class="col-11">
                    <input asp-for="Member.Password" placeholder="Your password...">
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-1">
                    <label asp-for="Member.DateOfBirth">DateOfBirth*</label>
                    <span asp-validation-for="Member.DateOfBirth"></span>
                </div>
                <div class="col-11">
                    <input class="form-control" type="date" asp-for="Member.DateOfBirth">
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-1">
                    <label asp-for="Member.Address">Address*</label>
                    <span asp-validation-for="Member.Address"></span><br />
                </div>
                <div class="col-11">
                    <textarea asp-for="Member.Address" placeholder="Your address..."></textarea>
                </div>
            </div>
            <div class="button_container">
                <input type="submit" value="Submit">
                <input type="reset" value="Cancel">
            </div>
        </form>
        <div><p>@ViewData["Message"]</p></div>
    </div>
</div>

